include ../mixins/table-tree.pug
header.header 
    .container 
        .row.algin-items-center 
            .col-3  
                .inner-logo 
                    a(href="/")
                        img(src="/images/logoRF.png", alt="logo") 
            .col-5 
                form(
                    action="/search"
                    method="GET"
                ) 
                    div(class="form-group d-flex mb-0")
                        input(
                        type="text"
                        placeholder="Nhập từ khóa"
                        class="form-control"
                        name="keyword"
                        value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-success"
                        ) Tìm
            .col-4 
                .inner-menu 
                    ul 
                        li 
                            a(href="/") Trang chủ
                        li(class="sub-menu") 
                            a(href="/products") Sản phẩm 
                                +table-tree(layoutCategoryProducts)
                        li
                            a(href="/cart") Giỏ hàng(#{(miniCart) ? miniCart.totalQuantity : 0})
                        if(!user)

                            li  
                                a(href="/user/register")  Đăng ký
                            li  
                                a(href="/user/login")  Đăng nhập 
                        else
                            li  
                                a(href="/chat")  Chat 
                            li  
                                a(href="/user/info")  #{user.fullName}
                            li  
                                a(href="/user/logout")  Đăng xuất
                            