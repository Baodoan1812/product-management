extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +error(3000)

    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Đổi lại mật khẩu 
                form(
                    action=`/user/password/reset`
                    method="POST"
                )
                    div(class="form-group")
                        label(for="password") Mật khẩu mới 
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required 
                        )
                    div(class="form-group")
                        label(for="confirmPassword") Xác nhận lại mật khẩu 
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                            required 
                        )
                    
                    button(
                        type="submit"
                        class="form-control btn btn-primary"
                    )  Xác nhận