extends ../../layouts/default.pug


block main 
    .card.mb-3 
        .card-header Danh sách 
        .card-body
            .row 
                .col-8
                        
                .col-4 
                    a(
                        href=`${prefixAdmin}/product-category/create`
                        class="btn btn-outline-success"
                        ) + Thêm mới
        .card-body
            table(
                class="table table-hover table-sm"
                checkbox-multi
            )
                thead 
                    tr
                        th 
                            input(type="checkbox" name="checkall")  
                        th STT 
                        th Hinh anh 
                        th Tieu de 
                        th Muc cha
                        th Trang thai 
                      
                
                tbody 
                    each item,index in records 
                        tr
                        td 
                            input(
                                type="checkbox"
                                name="id"
                                value=item.id
                                )
                        td #{index+1}
                        td 
                            img(src=item.thumbnail,
                            alt=item.title
                            width="100px"
                            height="auto")
                        td  #{item.title}
                         
                        td  #{item.parent_id}
                            
                        td 
                            input(
                                type="number"
                                value=item.position 
                                style="width:60px"
                                min="1"
                                name="position"
                                )
                        td
                            if(item.status==="active")
                                a(
                                    href="javascript:"
                                    button-change-status
                                    data-status=item.status
                                    data-id=item.id
                                    class="badge badge-success"
                                )   Hoat Dong
                                     
                            else 
                                a(
                                    href="javascript:"
                                    button-change-status
                                    data-status=item.status
                                    data-id=item.id
                                    class="badge badge-danger"
                                    ) Dung hoat dong
                        
    script(src="/admin/js/product.js") 
    

    

            