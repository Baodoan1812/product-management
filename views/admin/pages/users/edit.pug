extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    +error(5000)
    form(
        action=`/user/update/${user.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Họ tên 
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                value=user.fullName
                )
        div(class="form-group")
            label(for="email") Email
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=user.email
            )
        div(class="form-group")
            label(for="password") Mật khẩu
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                value=""
            )
        div(
            class="form-group"
            upload-image
        )
            
            label(for="thumbnail") Hình ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input 
            )
            img(
                src=user.thumbnail
                class="image-preview"
                width="100px"
                upload-image-preview
            )
        

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(user.status=="active"?true:false)
            )
            label(for="statusActive" class="form-check-label") Đang hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
                checked=(user.status=="inactive"?true:false)
            )
            label(for="statusInactive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
    script(src="/admin/js/product.js") 